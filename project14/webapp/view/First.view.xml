>
    <Page id="page">
        <content>
            <List
                id="idListEmp"
                items="{myModel>/aEmployees}"
                mode="SingleSelectMaster"
                selectionChange="onSelEmp"
            >
                <headerToolbar>
                    <Toolbar>
                        <Text
                            text="Employees Details"
                            class="sapMH4FontSize"
                        />
                        <ToolbarSpacer />
                        <SearchField width="30%" liveChange="onSearchEmp"/>
                        <Button
                            icon="sap-icon://sort-ascending"
                            tooltip="Sort Ascending"
                            press="onSortAscending"
                        />
                        <Button
                            icon="sap-icon://sort-descending"
                            tooltip="Sort Descending"
                            press="onSortDescending"
                        />
                    </Toolbar>
                </headerToolbar>
                <ObjectListItem
                    title="{myModel>empname}"
                    number="{myModel>empid}"
                    numberUnit="{myModel>empdesig}"
                >
                    <attributes>
                        <ObjectAttribute
                            title="Skill"
                            text="{myModel>empskill}"
                        />
                        <ObjectAttribute
                            title="Email"
                            text="{myModel>empemail}"
                        />
                    </attributes>
                    <firstStatus>
                        <ObjectStatus text="{myModel>emploc}" />
                    </firstStatus>
                </ObjectListItem>
            </List>
