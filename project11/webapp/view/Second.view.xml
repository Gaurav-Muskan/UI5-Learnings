<mvc:View controllerName="restinpeace.project1.controller.Second"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="" title="{i18n>title}">
        <customHeader>
            <Bar>
                <contentMiddle>
                    <Title text="I am Second View" />
                </contentMiddle>
            </Bar>
        </customHeader>
        <content>
            <VBox>
                <HBox>
                    <Label text="Employee Id" required="true" width="150px"/>
                    <Text id="idIpEmpId" text="{EmpDetails>/empDetails/empid}" />
                </HBox>
                <HBox>
                    <Label text="Employee Name" required="true" width="150px"/>
                    <Text id="idIpEmpName" text="{EmpDetails>/empDetails/empname}" />
                </HBox>
                <HBox>
                    <Label text="Employee Designation" required="true" width="150px"/>
                    <Text id="idIpEmpDesignation" text="{EmpDetails>/empDetails/empdesignation}" />
                </HBox>
                <HBox>
                    <Label text="Employee Skill" required="true" width="150px"/>
                    <Text id="idIpEmpSkill" text="{EmpDetails>/empDetails/empskill}" />
                </HBox>
                <HBox>
                    <Label text="Employee Email" required="true" width="150px"/>
                    <Text id="idIpEmpEmail" text="{EmpDetails>/empDetails/empemail}" />
                </HBox>
                <HBox>
                    <Label text="Employee Phone" required="true" width="150px"/>
                    <Text id="idIpEmpPhone" text="{EmpDetails>/empDetails/empphone}" />
                </HBox>
            </VBox>
        </content>
        <footer>
            <Bar>
                <contentMiddle>
                    <Button text="Go to Third View" press="onGoThird" type="Emphasized" />
                    <Button text="Back" press="onGoFirst" type="Emphasized" />
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>
