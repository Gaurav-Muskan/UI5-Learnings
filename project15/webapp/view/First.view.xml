<mvc:View
    controllerName="restinpeace.project1.controller.First"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Page id="page">
        <content>
            <f:SimpleForm
                title="Employee Information"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanL="3"
                labelSpanM="3"
                emptySpanL="4"
                emptySpanM="4"
            >
                <f:content>
                    <Label
                        text="Select Employee Id"
                        required="true"
                    />
                    <Input id="idIpEmpId" showValueHelp="true" valueHelpRequest="onF4HelpPress" />
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <Bar>
                <contentMiddle>
                    <Button
                        id="idBtnSub"
                        text="Submit"
                        press="onSubmit"
                        type="Emphasized"
                    />
                </contentMiddle>
            </Bar>
        </footer>
    </Page>
</mvc:View>
